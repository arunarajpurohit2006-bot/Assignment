#include <stdio.h>
#include <stdbool.h>

#define N 4
int board[N][N];

void printBoard() {
    for (int i = 0; i < N; i++) {
        for (int j = 0; j < N; j++) {
            if (board[i][j] == 1)
                printf("Q ");
            else
                printf("x ");
        }
        printf("\n");
    }
    printf("\n");
}

bool isSafe(int row, int col) {
    int i, j;

    for (i = 0; i < col; i++)
        if (board[row][i])
            return false;

    for (i = row, j = col; i >= 0 && j >= 0; i--, j--)
        if (board[i][j])
            return false;

    for (i = row, j = col; j >= 0 && i < N; i++, j--)
        if (board[i][j])
            return false;

    return true;
}

bool NQueen(int col) {
    if (col >= N) {
        printBoard();
        return true;
    }

    bool res = false;

    for (int i = 0; i < N; i++) {
        if (isSafe(i, col)) {
            board[i][col] = 1;
            res = NQueen(col + 1) || res;
            board[i][col] = 0;
        }
    }

    return res;
}

int main() {
    if (!NQueen(0)) {
        printf("No solution exists\n");
    }
    return 0;
}
